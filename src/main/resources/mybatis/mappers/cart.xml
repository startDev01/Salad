    <select id="cartById" parameterType="String" resultMap="cartListResult">
        SELECT
            SP.PRODNUM,
            SP.PRODNAME,
            SP.PRODPRICE,
            SP.PRODDESCRIPTION,
            SP.PRODBRAND,
            SP.PRODCREATETIMESTAMP,
            SP.PRODDELIVERYPRICE,
            PI.PRODIMAGEURL,
            PI.PRODIMAGENAME,
            PI.PRODIMAGEDATE,
            SC.CARTNUM,
            SC.USERID,
            SC.CARTCOUNT
        FROM
            SCOTT.SHOP_PRODUCT SP
                LEFT JOIN
            SCOTT.PROD_IMAGE PI
            ON
                SP.PRODNUM = PI.PRODNUM
                LEFT JOIN
            SCOTT.SHOP_CART SC
            ON
                SP.PRODNUM = SC.PRODNUM
        WHERE SC.USERID = #{userId}
    </select>



    <!-- cartNum으로 장바구니 데이터 삭제 -->
    <delete id="delCartOne" parameterType="int">
        delete
        from shop_cart
        where cartNum = #{cartNum}
    </delete>

    <!-- cartNum, cartCount로 장바구니 데이터 수정 -->
    <update id="updateCartOne" parameterType="cartVO">
        update shop_cart
        set
            cartCount = #{cartCount}
        where
            cartNum = #{cartNum}
    </update>

</mapper>